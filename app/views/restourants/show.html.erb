<%= link_to "Home", restourants_path %>

<table>
  <thead>
    <tr>
      <th width="200">Restourant Name</th>
      <th width="200">Description</th>
      <th width="150">Address</th>
      <th width="150">Phone</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @restourant.name %></td>
        <td><%= @restourant.description %></td>
        <td><%= @restourant.address %></td>
        <td><%= @restourant.phone %></td>
        <td><%= link_to "Edit", edit_restourant_path(@restourant) %></td>
        <td><%= link_to "Remove", @restourant, method: :delete,
                                data: { confirm: "Are you sure?" } %></td>
        <td><%= link_to "Make a new reservation",
                          new_reservation_for_restourant_path(restourant_id:@restourant.id)%></td>

      </tr>
  </tbody>
</table>


<div>
<img src = "https://maps.googleapis.com/maps/api/staticmap?center=<%= @restourant.address %>&zoom=14&size=400x400&markers=size:mid%7Ccolor:red" >
</div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
