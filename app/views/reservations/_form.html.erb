<%= simple_form_for @reservation, html: {class: :reserv_form} do |f| %>
  <button type="button" class="btn btn-default btn-lg" disabled="disabled">
    <%= f.input :last_name %></button>
  <button type="button" class="btn btn-default btn-lg" disabled="disabled">
    <%= f.input :no_people %></button>
  <button type="button" class="btn btn-default btn-lg" disabled="disabled">
    <%= f.input :email %></button>
  <button type="button" class="btn btn-default btn-lg" disabled="disabled">
    <%= f.input :datetime, as: :datetime %></button>
        
  <%= f.input :restourant_id, as: :hidden%>

  <%= show_simple_captcha %>
  <%= f.button :submit %>
<% end %>
