<%= simple_form_for @reservation, html: {class: :reserv_form} do |f| %>
  <%= f.input :last_name %>
  <%= f.input :no_people%>
  <%= f.input :email %>
  <%= f.input :datetime, as: :datetime %>
  <%= f.input :restourant_id, as: :hidden%>

  <%= show_simple_captcha %>
  <%= f.button :submit %>
<% end %>
